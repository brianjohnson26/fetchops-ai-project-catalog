modules = ["nodejs-20", "web", "nix"]
run = "npm run start"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run start -- -p $PORT"]
build = ["sh", "-c", "DATABASE_URL_SUPABASE=$DATABASE_URL_SUPABASE npx --yes pnpm@9 install --prod=false && npx --yes pnpm@9 exec prisma generate && npx --yes pnpm@9 run build"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5555
externalPort = 3000

[[ports]]
localPort = 5556
externalPort = 3001

[workflows]
runButton = "Production"

[[workflows.workflow]]
name = "Production"
author = 46799544
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[agent]
expertMode = true
