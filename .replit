modules = ["nodejs-20", "web", "nix"]
run = "npm run start"

[nix]
channel = "stable-25_05"

[deployment]
run = ["sh", "-c", "npm run start -- -p $PORT"]
build = ["sh", "-c", "DATABASE_URL_SUPABASE=$DATABASE_URL_SUPABASE npx --yes pnpm@9 install --prod=false && npx --yes pnpm@9 exec prisma generate && npx --yes pnpm@9 run build"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 45453
externalPort = 3000

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Production"
author = 46799544
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run build"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run start"

[[workflows.workflow]]
name = "Dev Server"
author = 46799544
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "next dev -H 0.0.0.0 -p 5000"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "App Server"

[[workflows.workflow]]
name = "App Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "next dev -H 0.0.0.0 -p 5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[agent]
expertMode = true
